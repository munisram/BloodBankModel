package com.bloodbank.Dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import com.bloodbank.model.BillingModel;

public class BillingDao {
	
	public int insertBilling(BillingModel billing) {
		int n=0;
		
		ConnectionUtil connection=new ConnectionUtil();
		try {
			Connection  con=connection.getConnection();
			String query="update blood_price set price=? where blood_type=?";
			PreparedStatement pstmt=con.prepareStatement(query);
			pstmt.setInt(1, billing.getPrice());
			pstmt.setString(2, billing.getBloodType());
			n=pstmt.executeUpdate();
			
			
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
		
		
		
		return n;
		
	}
	

}
